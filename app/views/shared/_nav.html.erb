<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <%= link_to "Members Only Club", root_path, class: "navbar-brand me-auto", data: { turbo: false} %>
    <%= link_to 'Sign In', new_user_session_path, class: "btn btn-outline-primary" unless user_signed_in? %>
    <%= link_to 'Billing', billing_portal_path, class: "btn btn-primary me-2" if user_signed_in? %>
    <%= button_to("Log Out",destroy_user_session_path, method: :delete, class: "btn btn-outline-primary") if user_signed_in? %>
  </div>
</nav>
<% if user_signed_in? && current_user.active_subscription.present? %>
  <div class="alert alert-success" role="alert">
    Welcome to the club
  </div>
<% elsif user_signed_in? && current_user.active_subscription.blank? %>
  <div class="alert alert-danger" role="alert">
    Need to pay your dues
  </div>
<% end %>
